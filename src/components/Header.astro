---
import HamburgerMenu from "../components/HamburgerMenu.astro";
import { Image } from "astro:assets";
import logo from "../assets/logo.webp"
---

<header
  id="header"
  class="flex justify-start sm:justify-between items-center w-[100%] pl-4 sm:py-2 sm:px-10 fixed top-0 z-10 backdrop-filter backdrop-blur-md"
>
  <HamburgerMenu />

  <Image src={logo} alt="Logo" loading="eager" class="hidden sm:inline-block h-16 w-16 rounded-full"/>

  <nav class="hidden sm:flex gap-x-5 opacity-80 font-semibold">
    <a href="#home">Inicio</a>
    <a href="#projects">Muestrario</a>
    <!-- En un futuro aquí irán los proyectos -->
    <a href="#about">Sobre mi</a>
    <a href="#contact">Contacto</a>
  </nav>
</header>

<style>

/* Este tipo de animación aún no está soportada por todos lo navegadores */
#header{
  animation: header-animation both .5s linear ;
  animation-timeline: scroll(root);
  animation-range: 0 100px;
}

@keyframes header-animation {
  to{
    @apply shadow-lg shadow-black;
  }
}

</style>
